<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#ddd" />
            <gradient android:angle="-90" android:endColor="#00ffffff" android:startColor="#20000000" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#ddd" />
            <gradient android:angle="-90" android:endColor="#10000000" android:startColor="#64ffffff" />
        </shape>
    </item>
</selector>